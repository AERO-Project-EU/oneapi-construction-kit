; RUN: %spirv-ll -a OpenCL -b 64 %p/op_opencl_u_mad_hi_v3i16.spv | %filecheck %s
                        OpCapability Kernel
                        OpCapability Addresses
                        OpCapability Int16
                   %1 = OpExtInstImport "OpenCL.std"
                        OpMemoryModel Physical64 OpenCL
                        OpEntryPoint Kernel %u_mad_hi_v3i16 "u_mad_hi_v3i16"
                        OpSource OpenCL_C 102000

; All types, variables and constants
              %void_t = OpTypeVoid
               %i16_t = OpTypeInt 16 0
             %v3i16_t = OpTypeVector %i16_t 3
       %u_mad_hi_fn_t = OpTypeFunction %void_t
               %i16_2 = OpConstant %i16_t 2
               %i16_3 = OpConstant %i16_t 3
               %i16_4 = OpConstant %i16_t 4
             %v3i16_2 = OpConstantComposite %v3i16_t %i16_2 %i16_2 %i16_2
             %v3i16_3 = OpConstantComposite %v3i16_t %i16_3 %i16_3 %i16_3
             %v3i16_4 = OpConstantComposite %v3i16_t %i16_4 %i16_4 %i16_4

; All functions
      %u_mad_hi_v3i16 = OpFunction %void_t None %u_mad_hi_fn_t
; CHECK: define spir_kernel void @u_mad_hi_v3i16()
                   %2 = OpLabel
                   %3 = OpExtInst %v3i16_t %1 u_mad_hi %v3i16_2 %v3i16_3 %v3i16_4
; CHECK: {{%[a-zA-Z0-9]+}} = call spir_func <3 x i16> @_Z6mad_hiDv3_tS_S_(<3 x i16> <i16 2, i16 2, i16 2>, <3 x i16> <i16 3, i16 3, i16 3>, <3 x i16> <i16 4, i16 4, i16 4>)
                        OpReturn
; CHECK: ret void
                        OpFunctionEnd
; CHECK: }
