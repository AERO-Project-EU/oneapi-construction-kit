; RUN: %spirv-ll -a OpenCL -b 64 -c Float64 %p/op_opencl_u_select_v3double.spv | %filecheck %s
                        OpCapability Kernel
                        OpCapability Addresses
                        OpCapability Int64
                        OpCapability Float64
                   %1 = OpExtInstImport "OpenCL.std"
                        OpMemoryModel Physical64 OpenCL
                        OpEntryPoint Kernel %select_v3double "select_v3double"
                        OpSource OpenCL_C 102000

; All types, variables and constants
              %void_t = OpTypeVoid
              %ui64_t = OpTypeInt 64 0
            %double_t = OpTypeFloat 64
            %v3ui64_t = OpTypeVector %ui64_t 3
          %v3double_t = OpTypeVector %double_t 3
         %select_fn_t = OpTypeFunction %void_t
            %double_1 = OpConstant %double_t 1.0
            %double_2 = OpConstant %double_t 2.0
              %ui64_3 = OpConstant %ui64_t 3
          %v3double_1 = OpConstantComposite %v3double_t %double_1 %double_1 %double_1
          %v3double_2 = OpConstantComposite %v3double_t %double_2 %double_2 %double_2
            %v3ui64_3 = OpConstantComposite %v3ui64_t %ui64_3 %ui64_3 %ui64_3

; All functions
     %select_v3double = OpFunction %void_t None %select_fn_t
; CHECK: define spir_kernel void @select_v3double()
                   %2 = OpLabel
                   %3 = OpExtInst %v3double_t %1 select %v3double_1 %v3double_2 %v3ui64_3
; CHECK: {{%[a-zA-Z0-9]+}} = call spir_func <3 x double> @_Z6selectDv3_dS_Dv3_m(<3 x double> <double 1.000000e+00, double 1.000000e+00, double 1.000000e+00>, <3 x double> <double 2.000000e+00, double 2.000000e+00, double 2.000000e+00>, <3 x i64> <i64 3, i64 3, i64 3>)
                        OpReturn
; CHECK: ret void
                        OpFunctionEnd
; CHECK: }
