            %v16i32_1 = OpConstantComposite %v16i32_t %i32_1 %i32_1 %i32_1 %i32_1 %i32_1 %i32_1 %i32_1 %i32_1 %i32_1 %i32_1 %i32_1 %i32_1 %i32_1 %i32_1 %i32_1 %i32_1
            %v16i32_2 = OpConstantComposite %v16i32_t %i32_2 %i32_2 %i32_2 %i32_2 %i32_2 %i32_2 %i32_2 %i32_2 %i32_2 %i32_2 %i32_2 %i32_2 %i32_2 %i32_2 %i32_2 %i32_2

; All functions
       %s_hadd_v16i32 = OpFunction %void_t None %s_hadd_fn_t
