; RUN: %spirv-ll -a OpenCL -b 64 %spv_file_s | %filecheck %s
                        OpCapability Kernel
                        OpCapability Addresses
                        OpCapability Int16
                   %1 = OpExtInstImport "OpenCL.std"
                        OpMemoryModel Physical64 OpenCL
                        OpEntryPoint Kernel %u_sub_sat_i16 "u_sub_sat_i16"
                        OpSource OpenCL_C 102000

; All types, variables and constants
              %void_t = OpTypeVoid
               %i16_t = OpTypeInt 16 0
      %u_sub_sat_fn_t = OpTypeFunction %void_t
               %i16_3 = OpConstant %i16_t 3
               %i16_4 = OpConstant %i16_t 4

; All functions
       %u_sub_sat_i16 = OpFunction %void_t None %u_sub_sat_fn_t
; CHECK: define spir_kernel void @u_sub_sat_i16()
                   %2 = OpLabel
                   %3 = OpExtInst %i16_t %1 u_sub_sat %i16_3 %i16_4
; CHECK: {{%[a-zA-Z0-9]+}} = call spir_func zeroext i16 @_Z7sub_sattt(i16 zeroext 3, i16 zeroext 4)
                        OpReturn
; CHECK: ret void
                        OpFunctionEnd
; CHECK: }
