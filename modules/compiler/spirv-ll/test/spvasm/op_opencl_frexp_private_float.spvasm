; RUN: %spirv-ll -a OpenCL -b 64 %spv_file_s | %filecheck %s
                        OpCapability Kernel
                        OpCapability Addresses
                   %1 = OpExtInstImport "OpenCL.std"
                        OpMemoryModel Physical64 OpenCL
                        OpEntryPoint Kernel %frexp_float "frexp_float"
                        OpSource OpenCL_C 102000

; All types, variables and constants
              %void_t = OpTypeVoid
               %int_t = OpTypeInt 32 1
             %float_t = OpTypeFloat 32
           %int_ptr_t = OpTypePointer Function %int_t
          %frexp_fn_t = OpTypeFunction %void_t
             %float_1 = OpConstant %float_t 1.4

; All functions
         %frexp_float = OpFunction %void_t None %frexp_fn_t
; CHECK: define spir_kernel void @frexp_float()
                   %2 = OpLabel
                   %3 = OpVariable %int_ptr_t Function
; CHECK: [[ptr:%[a-zA-Z0-9]+]] = alloca i32
                   %4 = OpExtInst %float_t %1 frexp %float_1 %3
; CHECK: {{%[a-zA-Z0-9]+}} = call spir_func float @_Z5frexpfPi(float 0x3FF6666660000000, ptr [[ptr]])
                        OpReturn
; CHECK: ret void
                        OpFunctionEnd
; CHECK: }
