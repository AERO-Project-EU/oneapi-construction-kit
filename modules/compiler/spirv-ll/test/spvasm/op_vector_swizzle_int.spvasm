; RUN: %spirv-ll -a Vulkan -c Float64 -c Int64 %p/op_vector_swizzle_int.spv | %filecheck %s
            OpCapability Shader
            OpCapability Float64
            OpCapability Int64
       %1 = OpExtInstImport "GLSL.std.450"
            OpMemoryModel Logical GLSL450
            OpEntryPoint GLCompute %main "main"
            OpExecutionMode %main LocalSize 1 1 1
            OpSource GLSL 450
            OpName %main "main"
            OpName %main "main"
               OpName %res "res"
       %void = OpTypeVoid
          %3 = OpTypeFunction %void
        %int = OpTypeInt 32 1
     %v3_int = OpTypeVector %int 3
 %ptr_v3_int = OpTypePointer Function %v3_int
         %10 = OpConstant %int -42
         %11 = OpConstantComposite %v3_int %10 %10 %10
      %undef = OpUndef %v3_int
       %main = OpFunction %void None %3
          %5 = OpLabel
        %res = OpVariable %ptr_v3_int Function
         %23 = OpVectorShuffle %v3_int %11 %undef 0 0 1
               OpStore %res %23
               OpReturn
               OpFunctionEnd
; CHECK: ; ModuleID = '{{.*}}'
; CHECK: define spir_kernel void @main()
; CHECK: {{[%@][-a-zA-Z$._0-9][-a-zA-Z$._0-9]*}} = alloca <3 x i32>
; CHECK: store <3 x i32> <i32 -42, i32 -42, i32 -42>, ptr {{[%@][-a-zA-Z$._0-9][-a-zA-Z$._0-9]*}}
; CHECK: ret void
