; RUN: %spirv-ll -a OpenCL -b 64 %p/op_opencl_get_sub_group_size.spv | %filecheck %s
                                 OpCapability Addresses
                                 OpCapability Kernel
                                 OpCapability Int64
                            %1 = OpExtInstImport "OpenCL.std"
                                 OpMemoryModel Physical64 OpenCL
                                 OpEntryPoint Kernel %get_sub_group_size_fn "get_sub_group_size_fn" %__spirv_BuiltInSubgroupSize
                                 OpDecorate %__spirv_BuiltInSubgroupSize BuiltIn SubgroupSize
                       %size_t = OpTypeInt 64 0
                   %size_ptr_t = OpTypePointer Input %size_t
                       %void_t = OpTypeVoid
        %get_sub_group_size_fn_t = OpTypeFunction %void_t

    %__spirv_BuiltInSubgroupSize = OpVariable %size_ptr_t Input
          %get_sub_group_size_fn = OpFunction %void_t None %get_sub_group_size_fn_t
                            %2 = OpLabel
;CHECK: {{%[a-zA-Z0-9]+}} = call spir_func i32 @_Z18get_sub_group_sizev()
                          %res = OpLoad %size_t %__spirv_BuiltInSubgroupSize
                                 OpReturn
                                 OpFunctionEnd
