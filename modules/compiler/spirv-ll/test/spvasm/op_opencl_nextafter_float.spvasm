; RUN: %spirv-ll -a OpenCL -b 64 %p/op_opencl_nextafter_float.spv | %filecheck %s
                        OpCapability Kernel
                        OpCapability Addresses
                   %1 = OpExtInstImport "OpenCL.std"
                        OpMemoryModel Physical64 OpenCL
                        OpEntryPoint Kernel %nextafter_float "nextafter_float"
                        OpSource OpenCL_C 102000

; All types, variables and constants
              %void_t = OpTypeVoid
             %float_t = OpTypeFloat 32
      %nextafter_fn_t = OpTypeFunction %void_t
             %float_1 = OpConstant %float_t 1.2
             %float_2 = OpConstant %float_t -2.1

; All functions
     %nextafter_float = OpFunction %void_t None %nextafter_fn_t
; CHECK: define spir_kernel void @nextafter_float()
                   %2 = OpLabel
                   %3 = OpExtInst %float_t %1 nextafter %float_2 %float_1
; CHECK: {{%[a-zA-Z0-9]+}} = call spir_func float @_Z9nextafterff(float 0xC000CCCCC0000000, float 0x3FF3333340000000)
                        OpReturn
; CHECK: ret void
                        OpFunctionEnd
; CHECK: }
