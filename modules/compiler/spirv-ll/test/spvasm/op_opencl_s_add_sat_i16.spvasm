; RUN: %spirv-ll -a OpenCL -b 64 %spv_file_s | %filecheck %s
                        OpCapability Kernel
                        OpCapability Addresses
                        OpCapability Int16
                   %1 = OpExtInstImport "OpenCL.std"
                        OpMemoryModel Physical64 OpenCL
                        OpEntryPoint Kernel %s_add_sat_i16 "s_add_sat_i16"
                        OpSource OpenCL_C 102000

; All types, variables and constants
              %void_t = OpTypeVoid
               %ui16_t = OpTypeInt 16 0
      %s_add_sat_fn_t = OpTypeFunction %void_t
               %ui16_1 = OpConstant %ui16_t 1
               %ui16_2 = OpConstant %ui16_t 2

; All functions
       %s_add_sat_i16 = OpFunction %void_t None %s_add_sat_fn_t
; CHECK: define spir_kernel void @s_add_sat_i16()
                   %2 = OpLabel
                   %3 = OpExtInst %ui16_t %1 s_add_sat %ui16_1 %ui16_2
; CHECK: {{%[a-zA-Z0-9]+}} = call spir_func signext i16 @_Z7add_satss(i16 signext 1, i16 signext 2)
                        OpReturn
; CHECK: ret void
                        OpFunctionEnd
; CHECK: }
