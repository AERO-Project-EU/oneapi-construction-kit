; RUN: %spirv-ll -a OpenCL -b 64 %spv_file_s | %filecheck %s
                        OpCapability Kernel
                        OpCapability Addresses
                   %1 = OpExtInstImport "OpenCL.std"
                        OpMemoryModel Physical64 OpenCL
                        OpEntryPoint Kernel %pown_float "pown_float"
                        OpSource OpenCL_C 102000

; All types, variables and constants
              %void_t = OpTypeVoid
               %int_t = OpTypeInt 32 1
             %float_t = OpTypeFloat 32
           %pown_fn_t = OpTypeFunction %void_t
               %int_2 = OpConstant %int_t 2
             %float_2 = OpConstant %float_t 2.2

; All functions
          %pown_float = OpFunction %void_t None %pown_fn_t
; CHECK: define spir_kernel void @pown_float()
                   %2 = OpLabel
                   %3 = OpExtInst %float_t %1 pown %float_2 %int_2
; CHECK: {{%[a-zA-Z0-9]+}} = call spir_func float @_Z4pownfi(float 0x40019999A0000000, i32 2)
                        OpReturn
; CHECK: ret void
                        OpFunctionEnd
; CHECK: }
