; RUN: %spirv-ll -a OpenCL -b 64 %spv_file_s | %filecheck %s
                        OpCapability Kernel
                        OpCapability Addresses
                   %1 = OpExtInstImport "OpenCL.std"
                        OpMemoryModel Physical64 OpenCL
                        OpEntryPoint Kernel %u_ctz_v4i32 "u_ctz_v4i32"
                        OpSource OpenCL_C 300000

; All types, variables and constants
              %void_t = OpTypeVoid
               %i32_t = OpTypeInt 32 0
             %v4i32_t = OpTypeVector %i32_t 4
          %u_ctz_fn_t = OpTypeFunction %void_t
               %i32_1 = OpConstant %i32_t 1
             %v4i32_1 = OpConstantComposite %v4i32_t %i32_1 %i32_1 %i32_1 %i32_1

; All functions
         %u_ctz_v4i32 = OpFunction %void_t None %u_ctz_fn_t
; CHECK: define spir_kernel void @u_ctz_v4i32()
                   %2 = OpLabel
                   %3 = OpExtInst %v4i32_t %1 ctz %v4i32_1
; CHECK: {{%[a-zA-Z0-9]+}} = call spir_func <4 x i32> @_Z3ctzDv4_j(<4 x i32> <i32 1, i32 1, i32 1, i32 1>)
                        OpReturn
; CHECK: ret void
                        OpFunctionEnd
; CHECK: }
