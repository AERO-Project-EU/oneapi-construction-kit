; RUN: %spirv-ll -a Vulkan -c Float16 %spv_file_s | %filecheck %s
            OpCapability Shader
            OpCapability Float16
       %1 = OpExtInstImport "GLSL.std.450"
            OpMemoryModel Logical GLSL450
            OpEntryPoint GLCompute %main "main"
            OpExecutionMode %main LocalSize 1 1 1
            OpSource GLSL 450
            OpName %main "main"
            OpName %a "a"
    %void = OpTypeVoid
       %3 = OpTypeFunction %void
   %float = OpTypeFloat 32
 %floatPi = OpConstant %float 3.1415927410125732421875
%ptr_float = OpTypePointer Function %float
    %main = OpFunction %void None %3
       %5 = OpLabel
       %a = OpVariable %ptr_float Function %floatPi
      %13 = OpLoad %float %a
      %14 = OpQuantizeToF16 %float %13
            OpStore %a %14
            OpReturn
            OpFunctionEnd
; CHECK: ; ModuleID = '{{.*}}'
; CHECK: define spir_kernel void @main()
; CHECK: [[ARG:%[a-zA-Z0-9_]+]] = alloca float
; CHECK: store float 0x400921FB60000000, ptr [[ARG]]
; CHECK: [[LD_ARG:%[a-zA-Z0-9_]+]] = load float, ptr [[ARG]]
; CHECK: [[RES:%[a-zA-Z0-9_]+]] = call spir_func float @_Z13quantizeToF16f(float [[LD_ARG]])
; CHECK: store float [[RES]], ptr [[ARG]]
; CHECK: ret void
; CHECK: declare spir_func float @_Z13quantizeToF16f(float)
