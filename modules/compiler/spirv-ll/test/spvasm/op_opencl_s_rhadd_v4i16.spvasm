; RUN: %spirv-ll -a OpenCL -b 64 %spv_file_s | %filecheck %s
                        OpCapability Kernel
                        OpCapability Addresses
                        OpCapability Int16
                   %1 = OpExtInstImport "OpenCL.std"
                        OpMemoryModel Physical64 OpenCL
                        OpEntryPoint Kernel %s_rhadd_v4i16 "s_rhadd_v4i16"
                        OpSource OpenCL_C 102000

; All types, variables and constants
              %void_t = OpTypeVoid
               %i16_t = OpTypeInt 16 1
             %v4i16_t = OpTypeVector %i16_t 4
        %s_rhadd_fn_t = OpTypeFunction %void_t
               %i16_1 = OpConstant %i16_t 1
               %i16_2 = OpConstant %i16_t 2
             %v4i16_1 = OpConstantComposite %v4i16_t %i16_1 %i16_1 %i16_1 %i16_1
             %v4i16_2 = OpConstantComposite %v4i16_t %i16_2 %i16_2 %i16_2 %i16_2

; All functions
       %s_rhadd_v4i16 = OpFunction %void_t None %s_rhadd_fn_t
; CHECK: define spir_kernel void @s_rhadd_v4i16()
                   %2 = OpLabel
                   %3 = OpExtInst %v4i16_t %1 s_rhadd %v4i16_1 %v4i16_2
; CHECK: {{%[a-zA-Z0-9]+}} = call spir_func <4 x i16> @_Z5rhaddDv4_sS_(<4 x i16> <i16 1, i16 1, i16 1, i16 1>, <4 x i16> <i16 2, i16 2, i16 2, i16 2>)
                        OpReturn
; CHECK: ret void
                        OpFunctionEnd
; CHECK: }
