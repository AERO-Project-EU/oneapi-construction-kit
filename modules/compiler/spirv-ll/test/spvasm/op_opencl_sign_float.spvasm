; RUN: %spirv-ll -a OpenCL -b 64 %p/op_opencl_sign_float.spv -o %t
; RUN: %filecheck < %t %s
                        OpCapability Kernel
                        OpCapability Addresses
                   %1 = OpExtInstImport "OpenCL.std"
                        OpMemoryModel Physical64 OpenCL
                        OpEntryPoint Kernel %sign_float "sign_float"
                        OpSource OpenCL_C 102000

; All types, variables and constants
              %void_t = OpTypeVoid
             %float_t = OpTypeFloat 32
           %sign_fn_t = OpTypeFunction %void_t
             %float_3 = OpConstant %float_t 3.14

; All functions
          %sign_float = OpFunction %void_t None %sign_fn_t
; CHECK: define spir_kernel void @sign_float()
                   %2 = OpLabel
                   %3 = OpExtInst %float_t %1 sign %float_3
; CHECK: {{%[a-zA-Z0-9]+}} = call spir_func float @_Z4signf(float 0x40091EB860000000)
                        OpReturn
; CHECK: ret void
                        OpFunctionEnd
; CHECK: }
