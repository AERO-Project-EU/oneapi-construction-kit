; RUN: %spirv-ll -a OpenCL -b 64 %p/op_opencl_powr_v4float.spv | %filecheck %s
                        OpCapability Kernel
                        OpCapability Addresses
                   %1 = OpExtInstImport "OpenCL.std"
                        OpMemoryModel Physical64 OpenCL
                        OpEntryPoint Kernel %powr_v4float "powr_v4float"
                        OpSource OpenCL_C 102000

; All types, variables and constants
              %void_t = OpTypeVoid
             %float_t = OpTypeFloat 32
           %v4float_t = OpTypeVector %float_t 4
           %powr_fn_t = OpTypeFunction %void_t
             %float_0 = OpConstant %float_t 0.5
             %float_2 = OpConstant %float_t 2
           %v4float_0 = OpConstantComposite %v4float_t %float_0 %float_0 %float_0 %float_0
           %v4float_2 = OpConstantComposite %v4float_t %float_2 %float_2 %float_2 %float_2

; All functions
        %powr_v4float = OpFunction %void_t None %powr_fn_t
; CHECK: define spir_kernel void @powr_v4float()
                   %2 = OpLabel
                   %3 = OpExtInst %v4float_t %1 powr %v4float_2 %v4float_0
; CHECK: {{%[a-zA-Z0-9]+}} = call spir_func <4 x float> @_Z4powrDv4_fS_(<4 x float> <float 2.000000e+00, float 2.000000e+00, float 2.000000e+00, float 2.000000e+00>, <4 x float> <float 5.000000e-01, float 5.000000e-01, float 5.000000e-01, float 5.000000e-01>)
                        OpReturn
; CHECK: ret void
                        OpFunctionEnd
; CHECK: }
