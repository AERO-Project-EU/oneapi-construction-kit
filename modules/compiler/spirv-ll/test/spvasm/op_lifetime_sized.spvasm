; RUN: %spirv-ll -a OpenCL -b 64 -c Float64 %spv_file_s | %filecheck %s
            OpCapability Kernel
            OpCapability Float64
            OpCapability Int64
            OpCapability Int8
            OpCapability Addresses
            OpMemoryModel Physical64 OpenCL
            OpEntryPoint Kernel %lifetime "lifetime"
            OpName %lifetime "lifetime"
            OpName %a "a"
    %void = OpTypeVoid
    %uint = OpTypeInt 32 0
   %uchar = OpTypeInt 8 0
%_ptr_Workgroup_void = OpTypePointer Workgroup %void
       %3 = OpTypeFunction %void %_ptr_Workgroup_void
       %9 = OpConstant %uint 424
  %uint_1 = OpConstant %uint 1
  %uint_0 = OpConstant %uint 0
%lifetime = OpFunction %void None %3
       %a = OpFunctionParameter %_ptr_Workgroup_void
       %5 = OpLabel
            OpLifetimeStart %a 4
            OpLifetimeStop %a 4
            OpReturn
            OpFunctionEnd
; CHECK: ; ModuleID = '{{.*}}'
; CHECK: define spir_kernel void @lifetime(ptr addrspace(3) [[PTR:%[a-zA-Z0-9_]+]])
; We can't generate these intrinsics with address space 3 on llvm 4.0
; CHECK: {{(call void @llvm.lifetime.start.p3(i64 4, ptr addrspace(3) [[PTR]]))?}}
; CHECK: {{(call void @llvm.lifetime.end.p3(i64 4, ptr addrspace(3) [[PTR]]))?}}
; CHECK: ret void
; CHECK: {{(declare void @llvm.lifetime.start.p3(i64, ptr addrspace(3) nocapture))?}}
; CHECK: {{(declare void @llvm.lifetime.end.p3(i64, ptr addrspace(3) nocapture))?}}
; make sure the void* type is also functioning correctly
; CHECK: !{!"void*"}
