; RUN: %spirv-ll -a OpenCL -b 64 %p/op_opencl_ldexp_v4float.spv | %filecheck %s
                        OpCapability Kernel
                        OpCapability Addresses
                   %1 = OpExtInstImport "OpenCL.std"
                        OpMemoryModel Physical64 OpenCL
                        OpEntryPoint Kernel %ldexp_v4float "ldexp_v4float"
                        OpSource OpenCL_C 102000

; All types, variables and constants
              %void_t = OpTypeVoid
               %int_t = OpTypeInt 32 1
             %float_t = OpTypeFloat 32
             %v4int_t = OpTypeVector %int_t 4
           %v4float_t = OpTypeVector %float_t 4
          %ldexp_fn_t = OpTypeFunction %void_t
               %int_1 = OpConstant %int_t 1
             %float_2 = OpConstant %float_t 2
             %v4int_1 = OpConstantComposite %v4int_t %int_1 %int_1 %int_1 %int_1
           %v4float_2 = OpConstantComposite %v4float_t %float_2 %float_2 %float_2 %float_2

; All functions
       %ldexp_v4float = OpFunction %void_t None %ldexp_fn_t
; CHECK: define spir_kernel void @ldexp_v4float()
                   %2 = OpLabel
                   %3 = OpExtInst %v4float_t %1 ldexp %v4float_2 %v4int_1
; CHECK: {{%[a-zA-Z0-9]+}} = call spir_func <4 x float> @_Z5ldexpDv4_fDv4_i(<4 x float> <float 2.000000e+00, float 2.000000e+00, float 2.000000e+00, float 2.000000e+00>, <4 x i32> <i32 1, i32 1, i32 1, i32 1>)
                        OpReturn
; CHECK: ret void
                        OpFunctionEnd
; CHECK: }
