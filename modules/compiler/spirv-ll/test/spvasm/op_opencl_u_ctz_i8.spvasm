; RUN: %spirv-ll -a OpenCL -b 64 %p/op_opencl_u_ctz_i8.spv | %filecheck %s
                        OpCapability Kernel
                        OpCapability Addresses
                        OpCapability Int8
                   %1 = OpExtInstImport "OpenCL.std"
                        OpMemoryModel Physical64 OpenCL
                        OpEntryPoint Kernel %u_ctz_i8 "u_ctz_i8"
                        OpSource OpenCL_C 300000

; All types, variables and constants
              %void_t = OpTypeVoid
                %i8_t = OpTypeInt 8 0
          %u_ctz_fn_t = OpTypeFunction %void_t
                %i8_1 = OpConstant %i8_t 1

; All functions
            %u_ctz_i8 = OpFunction %void_t None %u_ctz_fn_t
; CHECK: define spir_kernel void @u_ctz_i8()
                   %2 = OpLabel
                   %3 = OpExtInst %i8_t %1 ctz %i8_1
; CHECK: {{%[a-zA-Z0-9]+}} = call spir_func zeroext i8 @_Z3ctzh(i8 zeroext 1)
                        OpReturn
; CHECK: ret void
                        OpFunctionEnd
; CHECK: }
