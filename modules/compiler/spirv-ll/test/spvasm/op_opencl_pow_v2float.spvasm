; RUN: %spirv-ll -a OpenCL -b 64 %p/op_opencl_pow_v2float.spv -o %t
; RUN: %filecheck < %t %s
                        OpCapability Kernel
                        OpCapability Addresses
                   %1 = OpExtInstImport "OpenCL.std"
                        OpMemoryModel Physical64 OpenCL
                        OpEntryPoint Kernel %pow_v2float "pow_v2float"
                        OpSource OpenCL_C 102000

; All types, variables and constants
              %void_t = OpTypeVoid
             %float_t = OpTypeFloat 32
           %v2float_t = OpTypeVector %float_t 2
            %pow_fn_t = OpTypeFunction %void_t
             %float_1 = OpConstant %float_t 1.5
             %float_2 = OpConstant %float_t 2
           %v2float_1 = OpConstantComposite %v2float_t %float_1 %float_1
           %v2float_2 = OpConstantComposite %v2float_t %float_2 %float_2

; All functions
         %pow_v2float = OpFunction %void_t None %pow_fn_t
; CHECK: define spir_kernel void @pow_v2float()
                   %2 = OpLabel
                   %3 = OpExtInst %v2float_t %1 pow %v2float_2 %v2float_1
; CHECK: {{%[a-zA-Z0-9]+}} = call spir_func <2 x float> @_Z3powDv2_fS_(<2 x float> <float 2.000000e+00, float 2.000000e+00>, <2 x float> <float 1.500000e+00, float 1.500000e+00>)
                        OpReturn
; CHECK: ret void
                        OpFunctionEnd
; CHECK: }
