; RUN: %spirv-ll -a OpenCL -b 64 -c Sampled1D %spv_file_s | %filecheck %s
                        OpCapability Kernel
                        OpCapability Addresses
                        OpCapability Sampled1D
                        OpMemoryModel Physical64 OpenCL
                        OpEntryPoint Kernel %image1d "image1d"
                        OpSource OpenCL_C 102000
                        OpName %image "image"

; All types, variables and constants
              %void_t = OpTypeVoid
               %int_t = OpTypeInt 32 1
        %image1d_t = OpTypeImage %void_t 1D 0 0 0 0 Unknown ReadOnly
     %query_size_fn_t = OpTypeFunction %void_t %image1d_t
               %int_1 = OpConstant %int_t 1

; All functions
             %image1d = OpFunction %void_t None %query_size_fn_t
               %image = OpFunctionParameter %image1d_t
; CHECK: define spir_kernel void @image1d(ptr addrspace(1) %image)
                   %1 = OpLabel
                   %2 = OpImageQuerySizeLod %int_t %image %int_1
; CHECK: {{%[a-zA-Z0-9]+}} = call spir_func i32 @_Z15get_image_width11ocl_image1d(ptr addrspace(1) %image)
                        OpReturn
; CHECK: ret void
                        OpFunctionEnd
; CHECK: }
