; RUN: %spirv-ll -a Vulkan -c Float64 -c Int64 %p/op_spec_constant_composite_uint_struct.spv | %filecheck %s
            OpCapability Shader
            OpCapability Float64
            OpCapability Int64
       %1 = OpExtInstImport "GLSL.std.450"
            OpMemoryModel Logical GLSL450
            OpEntryPoint GLCompute %main "main"
            OpExecutionMode %main LocalSize 1 1 1
            OpSource GLSL 450
            OpName %main "main"
            OpName %Foo "Foo"
               OpMemberName %Foo 0 "a"
               OpName %test_block "test_block"
               OpMemberName %test_block 0 "test_out"
               OpName %_ ""
               OpMemberDecorate %Foo 0 Offset 0
               OpMemberDecorate %test_block 0 Offset 0
               OpDecorate %test_block BufferBlock
               OpDecorate %_ DescriptorSet 0
               OpDecorate %_ Binding 0
               OpDecorate %12 SpecId 0
       %void = OpTypeVoid
          %3 = OpTypeFunction %void
        %uint = OpTypeInt 32 0
   %idx_type = OpTypeInt 32 0
        %Foo = OpTypeStruct %uint
 %test_block = OpTypeStruct %Foo
%_ptr_Uniform_test_block = OpTypePointer Uniform %test_block
          %_ = OpVariable %_ptr_Uniform_test_block Uniform
         %11 = OpConstant %idx_type 0
         %12 = OpSpecConstant %uint 42
         %14 = OpSpecConstantComposite %Foo %12 ; testing this
%_ptr_Uniform_Foo = OpTypePointer Uniform %Foo
       %main = OpFunction %void None %3
          %5 = OpLabel
         %16 = OpAccessChain %_ptr_Uniform_Foo %_ %11
               OpStore %16 %14
               OpReturn
               OpFunctionEnd
; CHECK: ; ModuleID = '{{.*}}'
; CHECK: [[test_block:%[a-zA-Z0-9_]+]] = type { [[Foo:%[a-zA-Z0-9_]+]] }
; CHECK: [[Foo]] = type { i32 }
; CHECK: define spir_kernel void @main(ptr addrspace(1){{( %0)?}}, ptr addrspace(1){{( %1)?}})
; CHECK: [[uniformA:%[a-zA-Z0-9]+]] = getelementptr [[test_block]], ptr addrspace(1) {{%[a-zA-Z0-9]+}}, i32 0, i32 0
; CHECK: store [[Foo]] { i32 42 }, ptr addrspace(1) [[uniformA]]
; CHECK: ret void
