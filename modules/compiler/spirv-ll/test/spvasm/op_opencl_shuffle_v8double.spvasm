; RUN: %spirv-ll -a OpenCL -b 64 -c Float64 %p/op_opencl_shuffle_v8double.spv -o %t
; RUN: %filecheck < %t %s
                        OpCapability Kernel
                        OpCapability Addresses
                        OpCapability Int64
                        OpCapability Float64
                        OpCapability Vector16
                   %1 = OpExtInstImport "OpenCL.std"
                        OpMemoryModel Physical64 OpenCL
                        OpEntryPoint Kernel %shuffle_v8double "shuffle_v8double"
                        OpSource OpenCL_C 102000

; All types, variables and constants
              %void_t = OpTypeVoid
            %double_t = OpTypeFloat 64
               %i64_t = OpTypeInt 64 0
          %v8double_t = OpTypeVector %double_t 8
             %v8i64_t = OpTypeVector %i64_t 8
        %shuffle_fn_t = OpTypeFunction %void_t
            %double_3 = OpConstant %double_t 3
               %i64_4 = OpConstant %i64_t 4
          %v8double_3 = OpConstantComposite %v8double_t %double_3 %double_3 %double_3 %double_3 %double_3 %double_3 %double_3 %double_3
             %v8i64_4 = OpConstantComposite %v8i64_t %i64_4 %i64_4 %i64_4 %i64_4 %i64_4 %i64_4 %i64_4 %i64_4

; All functions
    %shuffle_v8double = OpFunction %void_t None %shuffle_fn_t
; CHECK: define spir_kernel void @shuffle_v8double()
                   %2 = OpLabel
                   %3 = OpExtInst %v8double_t %1 shuffle %v8double_3 %v8i64_4
; CHECK: {{%[a-zA-Z0-9]+}} = call spir_func <8 x double> @_Z7shuffleDv8_dDv8_m(<8 x double> <double 3.000000e+00, double 3.000000e+00, double 3.000000e+00, double 3.000000e+00, double 3.000000e+00, double 3.000000e+00, double 3.000000e+00, double 3.000000e+00>, <8 x i64> <i64 4, i64 4, i64 4, i64 4, i64 4, i64 4, i64 4, i64 4>)
                        OpReturn
; CHECK: ret void
                        OpFunctionEnd
; CHECK: }
