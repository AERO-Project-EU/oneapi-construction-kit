; RUN: %spirv-ll -a OpenCL -b 64 %p/op_opencl_s_mad_hi_v2i16.spv | %filecheck %s
                        OpCapability Kernel
                        OpCapability Addresses
                        OpCapability Int16
                   %1 = OpExtInstImport "OpenCL.std"
                        OpMemoryModel Physical64 OpenCL
                        OpEntryPoint Kernel %s_mad_hi_v2i16 "s_mad_hi_v2i16"
                        OpSource OpenCL_C 102000

; All types, variables and constants
              %void_t = OpTypeVoid
               %i16_t = OpTypeInt 16 1
             %v2i16_t = OpTypeVector %i16_t 2
       %s_mad_hi_fn_t = OpTypeFunction %void_t
               %i16_1 = OpConstant %i16_t 1
               %i16_2 = OpConstant %i16_t 2
               %i16_3 = OpConstant %i16_t 3
             %v2i16_1 = OpConstantComposite %v2i16_t %i16_1 %i16_1
             %v2i16_2 = OpConstantComposite %v2i16_t %i16_2 %i16_2
             %v2i16_3 = OpConstantComposite %v2i16_t %i16_3 %i16_3

; All functions
      %s_mad_hi_v2i16 = OpFunction %void_t None %s_mad_hi_fn_t
; CHECK: define spir_kernel void @s_mad_hi_v2i16()
                   %2 = OpLabel
                   %3 = OpExtInst %v2i16_t %1 s_mad_hi %v2i16_1 %v2i16_2 %v2i16_3
; CHECK: {{%[a-zA-Z0-9]+}} = call spir_func <2 x i16> @_Z6mad_hiDv2_sS_S_(<2 x i16> <i16 1, i16 1>, <2 x i16> <i16 2, i16 2>, <2 x i16> <i16 3, i16 3>)
                        OpReturn
; CHECK: ret void
                        OpFunctionEnd
; CHECK: }
