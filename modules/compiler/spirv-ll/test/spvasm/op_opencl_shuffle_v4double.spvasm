; RUN: %spirv-ll -a OpenCL -b 64 -c Float64 %spv_file_s | %filecheck %s
                        OpCapability Kernel
                        OpCapability Addresses
                        OpCapability Int64
                        OpCapability Float64
                   %1 = OpExtInstImport "OpenCL.std"
                        OpMemoryModel Physical64 OpenCL
                        OpEntryPoint Kernel %shuffle_v4double "shuffle_v4double"
                        OpSource OpenCL_C 102000

; All types, variables and constants
              %void_t = OpTypeVoid
            %double_t = OpTypeFloat 64
               %i64_t = OpTypeInt 64 0
          %v4double_t = OpTypeVector %double_t 4
             %v4i64_t = OpTypeVector %i64_t 4
        %shuffle_fn_t = OpTypeFunction %void_t
            %double_3 = OpConstant %double_t 3
               %i64_4 = OpConstant %i64_t 4
          %v4double_3 = OpConstantComposite %v4double_t %double_3 %double_3 %double_3 %double_3
             %v4i64_4 = OpConstantComposite %v4i64_t %i64_4 %i64_4 %i64_4 %i64_4

; All functions
    %shuffle_v4double = OpFunction %void_t None %shuffle_fn_t
; CHECK: define spir_kernel void @shuffle_v4double()
                   %2 = OpLabel
                   %3 = OpExtInst %v4double_t %1 shuffle %v4double_3 %v4i64_4
; CHECK: {{%[a-zA-Z0-9]+}} = call spir_func <4 x double> @_Z7shuffleDv4_dDv4_m(<4 x double> <double 3.000000e+00, double 3.000000e+00, double 3.000000e+00, double 3.000000e+00>, <4 x i64> <i64 4, i64 4, i64 4, i64 4>)
                        OpReturn
; CHECK: ret void
                        OpFunctionEnd
; CHECK: }
