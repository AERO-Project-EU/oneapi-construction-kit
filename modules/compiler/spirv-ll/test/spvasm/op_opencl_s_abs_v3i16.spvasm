; RUN: %spirv-ll -a OpenCL -b 64 %spv_file_s | %filecheck %s
                        OpCapability Kernel
                        OpCapability Addresses
                        OpCapability Int16
                   %1 = OpExtInstImport "OpenCL.std"
                        OpMemoryModel Physical64 OpenCL
                        OpEntryPoint Kernel %s_abs_v3i16 "s_abs_v3i16"
                        OpSource OpenCL_C 102000

; All types, variables and constants
              %void_t = OpTypeVoid
              %ui16_t = OpTypeInt 16 0
               %i16_t = OpTypeInt 16 1
            %v3ui16_t = OpTypeVector %ui16_t 3
             %v3i16_t = OpTypeVector %i16_t 3
          %s_abs_fn_t = OpTypeFunction %void_t
               %i16_2 = OpConstant %i16_t -2
             %v3i16_2 = OpConstantComposite %v3i16_t %i16_2 %i16_2 %i16_2

; All functions
         %s_abs_v3i16 = OpFunction %void_t None %s_abs_fn_t
; CHECK: define spir_kernel void @s_abs_v3i16()
                   %2 = OpLabel
                   %3 = OpExtInst %v3ui16_t %1 s_abs %v3i16_2
; CHECK: {{%[a-zA-Z0-9]+}} = call spir_func <3 x i16> @_Z3absDv3_s(<3 x i16> <i16 -2, i16 -2, i16 -2>)
                        OpReturn
; CHECK: ret void
                        OpFunctionEnd
; CHECK: }
