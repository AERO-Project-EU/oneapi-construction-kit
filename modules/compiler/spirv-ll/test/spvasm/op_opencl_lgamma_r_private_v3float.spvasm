; RUN: %spirv-ll -a OpenCL -b 64 %spv_file_s | %filecheck %s
                        OpCapability Kernel
                        OpCapability Addresses
                   %1 = OpExtInstImport "OpenCL.std"
                        OpMemoryModel Physical64 OpenCL
                        OpEntryPoint Kernel %lgamma_r_v3float "lgamma_r_v3float"
                        OpSource OpenCL_C 102000

; All types, variables and constants
              %void_t = OpTypeVoid
               %int_t = OpTypeInt 32 1
             %float_t = OpTypeFloat 32
             %v3int_t = OpTypeVector %int_t 3
           %v3float_t = OpTypeVector %float_t 3
         %v3int_ptr_t = OpTypePointer Function %v3int_t
       %lgamma_r_fn_t = OpTypeFunction %void_t
             %float_2 = OpConstant %float_t 2.14
           %v3float_2 = OpConstantComposite %v3float_t %float_2 %float_2 %float_2

; All functions
    %lgamma_r_v3float = OpFunction %void_t None %lgamma_r_fn_t
; CHECK: define spir_kernel void @lgamma_r_v3float()
                   %2 = OpLabel
                   %3 = OpVariable %v3int_ptr_t Function
; CHECK: [[signp:%[a-zA-Z0-9]+]] = alloca <3 x i32>
                   %4 = OpExtInst %v3float_t %1 lgamma_r %v3float_2 %3
; CHECK: {{%[a-zA-Z0-9]+}} = call spir_func <3 x float> @_Z8lgamma_rDv3_fPDv3_i(<3 x float> <float 0x40011EB860000000, float 0x40011EB860000000, float 0x40011EB860000000>, ptr [[signp]])
                        OpReturn
; CHECK: ret void
                        OpFunctionEnd
; CHECK: }
