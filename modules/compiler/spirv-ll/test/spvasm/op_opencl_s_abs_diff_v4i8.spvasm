; RUN: %spirv-ll -a OpenCL -b 64 %p/op_opencl_s_abs_diff_v4i8.spv -o %t
; RUN: %filecheck < %t %s
                        OpCapability Kernel
                        OpCapability Addresses
                        OpCapability Int8
                   %1 = OpExtInstImport "OpenCL.std"
                        OpMemoryModel Physical64 OpenCL
                        OpEntryPoint Kernel %s_abs_diff_v4i8 "s_abs_diff_v4i8"
                        OpSource OpenCL_C 102000

; All types, variables and constants
              %void_t = OpTypeVoid
               %ui8_t = OpTypeInt 8 0
                %i8_t = OpTypeInt 8 1
             %v4ui8_t = OpTypeVector %ui8_t 4
              %v4i8_t = OpTypeVector %i8_t 4
     %s_abs_diff_fn_t = OpTypeFunction %void_t
                %i8_2 = OpConstant %i8_t 2
                %i8_5 = OpConstant %i8_t 5
              %v4i8_2 = OpConstantComposite %v4i8_t %i8_2 %i8_2 %i8_2 %i8_2
              %v4i8_5 = OpConstantComposite %v4i8_t %i8_5 %i8_5 %i8_5 %i8_5

; All functions
     %s_abs_diff_v4i8 = OpFunction %void_t None %s_abs_diff_fn_t
; CHECK: define spir_kernel void @s_abs_diff_v4i8()
                   %2 = OpLabel
                   %3 = OpExtInst %v4ui8_t %1 s_abs_diff %v4i8_2 %v4i8_5
; CHECK: {{%[a-zA-Z0-9]+}} = call spir_func <4 x i8> @_Z8abs_diffDv4_cS_(<4 x i8> <i8 2, i8 2, i8 2, i8 2>, <4 x i8> <i8 5, i8 5, i8 5, i8 5>)
                        OpReturn
; CHECK: ret void
                        OpFunctionEnd
; CHECK: }
