; RUN: %spirv-ll -a OpenCL -b 64 %p/op_opencl_s_rhadd_i8.spv | %filecheck %s
                        OpCapability Kernel
                        OpCapability Addresses
                        OpCapability Int8
                   %1 = OpExtInstImport "OpenCL.std"
                        OpMemoryModel Physical64 OpenCL
                        OpEntryPoint Kernel %s_rhadd_i8 "s_rhadd_i8"
                        OpSource OpenCL_C 102000

; All types, variables and constants
              %void_t = OpTypeVoid
                %i8_t = OpTypeInt 8 1
        %s_rhadd_fn_t = OpTypeFunction %void_t
                %i8_1 = OpConstant %i8_t 1
                %i8_2 = OpConstant %i8_t 2

; All functions
          %s_rhadd_i8 = OpFunction %void_t None %s_rhadd_fn_t
; CHECK: define spir_kernel void @s_rhadd_i8()
                   %2 = OpLabel
                   %3 = OpExtInst %i8_t %1 s_rhadd %i8_1 %i8_2
; CHECK: {{%[a-zA-Z0-9]+}} = call spir_func signext i8 @_Z5rhaddcc(i8 signext 1, i8 signext 2)
                        OpReturn
; CHECK: ret void
                        OpFunctionEnd
; CHECK: }
