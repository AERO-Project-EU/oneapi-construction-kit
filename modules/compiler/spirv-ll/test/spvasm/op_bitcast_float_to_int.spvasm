; RUN: %spirv-ll -a Vulkan -c Float64 -c Int64 %p/op_bitcast_float_to_int.spv | %filecheck %s
            OpCapability Shader
            OpCapability Float64
            OpCapability Int64
       %1 = OpExtInstImport "GLSL.std.450"
            OpMemoryModel Logical GLSL450
            OpEntryPoint GLCompute %main "main"
            OpExecutionMode %main LocalSize 1 1 1
            OpSource GLSL 450
            OpName %main "main"
            OpName %src "src"
               OpName %dst "dst"
       %void = OpTypeVoid
          %3 = OpTypeFunction %void
        %float = OpTypeFloat 32
    %ptr_float = OpTypePointer Function %float
          %9 = OpConstant %float 42.42
        %int = OpTypeInt 32 1
    %ptr_int = OpTypePointer Function %int
       %main = OpFunction %void None %3
          %5 = OpLabel
        %src = OpVariable %ptr_float Function
        %dst = OpVariable %ptr_int Function
               OpStore %src %9
         %13 = OpLoad %float %src
         %14 = OpBitcast %int %13
               OpStore %dst %14
               OpReturn
               OpFunctionEnd
; CHECK: ; ModuleID = '{{.*}}'
; CHECK: define spir_kernel void @main()
; CHECK: {{[%@][-a-zA-Z$._0-9][-a-zA-Z$._0-9]*}} = alloca float
; CHECK: {{[%@][-a-zA-Z$._0-9][-a-zA-Z$._0-9]*}} = alloca i32
; CHECK: store float {{(-?[0-9]+\.[0-9]+e\+[0-9]+|0x[0-9A-F]+)}}, ptr {{[%@][-a-zA-Z$._0-9][-a-zA-Z$._0-9]*}}
; CHECK: {{[%@][-a-zA-Z$._0-9][-a-zA-Z$._0-9]*}} = load float, ptr {{[%@][-a-zA-Z$._0-9][-a-zA-Z$._0-9]*}}
; CHECK: {{[%@][-a-zA-Z$._0-9][-a-zA-Z$._0-9]*}} = bitcast float {{[%@][-a-zA-Z$._0-9][-a-zA-Z$._0-9]*}} to i32
; CHECK: store i32 {{[%@][-a-zA-Z$._0-9][-a-zA-Z$._0-9]*}}, ptr {{[%@][-a-zA-Z$._0-9][-a-zA-Z$._0-9]*}}
; CHECK: ret void
