; RUN: %spirv-ll -a OpenCL -b 64 %p/op_opencl_ilogb_float.spv | %filecheck %s
                        OpCapability Kernel
                        OpCapability Addresses
                   %1 = OpExtInstImport "OpenCL.std"
                        OpMemoryModel Physical64 OpenCL
                        OpEntryPoint Kernel %ilogb_float "ilogb_float"
                        OpSource OpenCL_C 102000

; All types, variables and constants
              %void_t = OpTypeVoid
               %int_t = OpTypeInt 32 1
             %float_t = OpTypeFloat 32
          %ilogb_fn_t = OpTypeFunction %void_t
             %float_1 = OpConstant %float_t 1

; All functions
         %ilogb_float = OpFunction %void_t None %ilogb_fn_t
; CHECK: define spir_kernel void @ilogb_float()
                   %2 = OpLabel
                   %3 = OpExtInst %int_t %1 ilogb %float_1
; CHECK: {{%[a-zA-Z0-9]+}} = call spir_func i32 @_Z5ilogbf(float 1.000000e+00)
                        OpReturn
; CHECK: ret void
                        OpFunctionEnd
; CHECK: }
