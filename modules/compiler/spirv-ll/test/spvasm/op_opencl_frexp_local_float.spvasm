; RUN: %spirv-ll -a OpenCL -b 64 %p/op_opencl_frexp_local_float.spv | %filecheck %s
                        OpCapability Kernel
                        OpCapability Addresses
                   %1 = OpExtInstImport "OpenCL.std"
                        OpMemoryModel Physical64 OpenCL
                        OpEntryPoint Kernel %frexp_float "frexp_float"
                        OpSource OpenCL_C 102000
                        OpName %in_ptr "in_ptr"

; All types, variables and constants
              %void_t = OpTypeVoid
               %int_t = OpTypeInt 32 1
             %float_t = OpTypeFloat 32
           %int_ptr_t = OpTypePointer Workgroup %int_t
          %frexp_fn_t = OpTypeFunction %void_t %int_ptr_t
             %float_1 = OpConstant %float_t 1.4

; All functions
         %frexp_float = OpFunction %void_t None %frexp_fn_t
              %in_ptr = OpFunctionParameter %int_ptr_t
; CHECK: define spir_kernel void @frexp_float(ptr addrspace(3) %in_ptr)
                   %2 = OpLabel
                   %3 = OpExtInst %float_t %1 frexp %float_1 %in_ptr
; CHECK: {{%[a-zA-Z0-9]+}} = call spir_func float @_Z5frexpfPU3AS3i(float 0x3FF6666660000000, ptr addrspace(3) %in_ptr)
                        OpReturn
; CHECK: ret void
                        OpFunctionEnd
; CHECK: }
