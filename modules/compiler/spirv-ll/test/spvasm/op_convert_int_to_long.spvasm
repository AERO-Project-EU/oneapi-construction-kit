; RUN: %spirv-ll -a Vulkan -c Float64 -c Int64 %p/op_convert_int_to_long.spv | %filecheck %s
            OpCapability Shader
            OpCapability Float64
            OpCapability Int64
       %1 = OpExtInstImport "GLSL.std.450"
            OpMemoryModel Logical GLSL450
            OpEntryPoint GLCompute %main "main"
            OpExecutionMode %main LocalSize 1 1 1
            OpSource GLSL 450
            OpName %main "main"
            OpName %a "a"
       %void = OpTypeVoid
          %3 = OpTypeFunction %void
        %int = OpTypeInt 32 1
        %long = OpTypeInt 64 1
    %ptr_int = OpTypePointer Function %int
    %ptr_long = OpTypePointer Function %long
          %9 = OpConstant %int -42
       %main = OpFunction %void None %3
          %5 = OpLabel
          %a = OpVariable %ptr_int Function
          %b = OpVariable %ptr_long Function
               OpStore %a %9
         %13 = OpLoad %int %a
         %14 = OpSConvert %long %13 ; testing this
               OpStore %b %14
               OpReturn
               OpFunctionEnd
; CHECK: ; ModuleID = '{{.*}}'
; CHECK: define spir_kernel void @main()
; CHECK: {{%.*}} = alloca i32
; CHECK: {{%.*}} = alloca i64
; CHECK: store i32 -42, {{(ptr|i32\*)}} {{%.*}}
; CHECK: {{%.*}} = load i32, {{(ptr|i32\*)}} {{%.*}}
; CHECK: {{%.*}} = sext i32 %2 to i64
; CHECK: store i64 {{%.*}}, {{(ptr|i64\*)}} {{%.*}}
; CHECK: ret void
