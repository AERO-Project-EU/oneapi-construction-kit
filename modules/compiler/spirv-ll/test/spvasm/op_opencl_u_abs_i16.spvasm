; RUN: %spirv-ll -a OpenCL -b 64 %p/op_opencl_u_abs_i16.spv | %filecheck %s
                        OpCapability Kernel
                        OpCapability Addresses
                        OpCapability Int16
                   %1 = OpExtInstImport "OpenCL.std"
                        OpMemoryModel Physical64 OpenCL
                        OpEntryPoint Kernel %u_abs_i16 "u_abs_i16"
                        OpSource OpenCL_C 102000

; All types, variables and constants
              %void_t = OpTypeVoid
               %i16_t = OpTypeInt 16 0
          %u_abs_fn_t = OpTypeFunction %void_t
               %i16_2 = OpConstant %i16_t 2

; All functions
           %u_abs_i16 = OpFunction %void_t None %u_abs_fn_t
; CHECK: define spir_kernel void @u_abs_i16()
                   %2 = OpLabel
                   %3 = OpExtInst %i16_t %1 u_abs %i16_2
; CHECK: {{%[a-zA-Z0-9]+}} = call spir_func zeroext i16 @_Z3abst(i16 zeroext 2)
                        OpReturn
; CHECK: ret void
                        OpFunctionEnd
; CHECK: }
