; RUN: %spirv-ll -a OpenCL -b 64 %p/op_opencl_modf_local_float.spv | %filecheck %s
                        OpCapability Kernel
                        OpCapability Addresses
                   %1 = OpExtInstImport "OpenCL.std"
                        OpMemoryModel Physical64 OpenCL
                        OpEntryPoint Kernel %modf_float "modf_float"
                        OpSource OpenCL_C 102000
                        OpName %in_iptr "in_iptr"

; All types, variables and constants
              %void_t = OpTypeVoid
             %float_t = OpTypeFloat 32
         %float_ptr_t = OpTypePointer Workgroup %float_t
           %modf_fn_t = OpTypeFunction %void_t %float_ptr_t
             %float_1 = OpConstant %float_t 1.4

; All functions
          %modf_float = OpFunction %void_t None %modf_fn_t
             %in_iptr = OpFunctionParameter %float_ptr_t
; CHECK: define spir_kernel void @modf_float(ptr addrspace(3) %in_iptr)
                   %2 = OpLabel
                   %3 = OpExtInst %float_t %1 modf %float_1 %in_iptr
; CHECK: {{%[a-zA-Z0-9]+}} = call spir_func float @_Z4modffPU3AS3f(float 0x3FF6666660000000, ptr addrspace(3) %in_iptr)
                        OpReturn
; CHECK: ret void
                        OpFunctionEnd
; CHECK: }
