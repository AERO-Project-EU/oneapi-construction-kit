; RUN: %spirv-ll -a OpenCL -b 64 %p/op_opencl_trunc_float.spv | %filecheck %s
                        OpCapability Kernel
                        OpCapability Addresses
                   %1 = OpExtInstImport "OpenCL.std"
                        OpMemoryModel Physical64 OpenCL
                        OpEntryPoint Kernel %trunc_float "trunc_float"
                        OpSource OpenCL_C 102000

; All types, variables and constants
              %void_t = OpTypeVoid
             %float_t = OpTypeFloat 32
          %trunc_fn_t = OpTypeFunction %void_t
             %float_3 = OpConstant %float_t 3.14

; All functions
         %trunc_float = OpFunction %void_t None %trunc_fn_t
; CHECK: define spir_kernel void @trunc_float()
                   %2 = OpLabel
                   %3 = OpExtInst %float_t %1 trunc %float_3
; CHECK: {{%[a-zA-Z0-9]+}} = call spir_func float @_Z5truncf(float 0x40091EB860000000)
                        OpReturn
; CHECK: ret void
                        OpFunctionEnd
; CHECK: }
