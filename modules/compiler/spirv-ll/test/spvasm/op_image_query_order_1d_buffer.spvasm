                   %1 = OpLabel
                   %2 = OpImageQueryOrder %int_t %in_image
; CHECK: {{%[a-zA-Z0-9]+}} = call spir_func i32 @_Z23get_image_channel_order17ocl_image1dbuffer(ptr addrspace(1) %in_image)
                        OpReturn
; CHECK: ret void
                        OpFunctionEnd
; CHECK: }
