; RUN: %spirv-ll -a OpenCL -b 64 %p/op_opencl_lgamma_r_local_v2float.spv | %filecheck %s
                        OpCapability Kernel
                        OpCapability Addresses
                   %1 = OpExtInstImport "OpenCL.std"
                        OpMemoryModel Physical64 OpenCL
                        OpEntryPoint Kernel %lgamma_r_v2float "lgamma_r_v2float"
                        OpSource OpenCL_C 102000
                        OpName %in_signp "in_signp"

; All types, variables and constants
              %void_t = OpTypeVoid
               %int_t = OpTypeInt 32 1
             %float_t = OpTypeFloat 32
             %v2int_t = OpTypeVector %int_t 2
           %v2float_t = OpTypeVector %float_t 2
         %v2int_ptr_t = OpTypePointer Workgroup %v2int_t
       %lgamma_r_fn_t = OpTypeFunction %void_t %v2int_ptr_t
             %float_2 = OpConstant %float_t 2.14
           %v2float_2 = OpConstantComposite %v2float_t %float_2 %float_2

; All functions
    %lgamma_r_v2float = OpFunction %void_t None %lgamma_r_fn_t
            %in_signp = OpFunctionParameter %v2int_ptr_t
; CHECK: define spir_kernel void @lgamma_r_v2float(ptr addrspace(3) %in_signp)
                   %2 = OpLabel
                   %3 = OpExtInst %v2float_t %1 lgamma_r %v2float_2 %in_signp
; CHECK: {{%[a-zA-Z0-9]+}} = call spir_func <2 x float> @_Z8lgamma_rDv2_fPU3AS3Dv2_i(<2 x float> <float 0x40011EB860000000, float 0x40011EB860000000>, ptr addrspace(3) %in_signp)
                        OpReturn
; CHECK: ret void
                        OpFunctionEnd
; CHECK: }
