; RUN: %spirv-ll -a OpenCL -b 64 %p/op_opencl_copysign_v2float.spv | %filecheck %s
                        OpCapability Kernel
                        OpCapability Addresses
                   %1 = OpExtInstImport "OpenCL.std"                        
                        OpMemoryModel Physical64 OpenCL
                        OpEntryPoint Kernel %copysign_v2float "copysign_v2float"
                        OpSource OpenCL_C 102000

; All types, variables and constants
              %void_t = OpTypeVoid
             %float_t = OpTypeFloat 32
           %v2float_t = OpTypeVector %float_t 2
       %copysign_fn_t = OpTypeFunction %void_t
             %float_1 = OpConstant %float_t 1
          %negFloat_1 = OpConstant %float_t -1
           %v2float_1 = OpConstantComposite %v2float_t %float_1 %float_1
        %negV2float_1 = OpConstantComposite %v2float_t %negFloat_1 %negFloat_1

; All functions
    %copysign_v2float = OpFunction %void_t None %copysign_fn_t
; CHECK: define spir_kernel void @copysign_v2float()
                   %2 = OpLabel
                   %3 = OpExtInst %v2float_t %1 copysign %v2float_1 %negV2float_1
; CHECK: {{%[a-zA-Z0-9]+}} = call spir_func <2 x float> @_Z8copysignDv2_fS_(<2 x float> <float 1.000000e+00, float 1.000000e+00>, <2 x float> <float -1.000000e+00, float -1.000000e+00>)
                        OpReturn
; CHECK: ret void
                        OpFunctionEnd
; CHECK: }
