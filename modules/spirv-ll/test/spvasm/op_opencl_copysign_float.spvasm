; RUN: %spirv-ll -a OpenCL -b 64 %p/op_opencl_copysign_float.spv -o %t
; RUN: %filecheck < %t %s
                        OpCapability Kernel
                        OpCapability Addresses
                   %1 = OpExtInstImport "OpenCL.std"                        
                        OpMemoryModel Physical64 OpenCL
                        OpEntryPoint Kernel %copysign_float "copysign_float"
                        OpSource OpenCL_C 102000

; All types, variables and constants
              %void_t = OpTypeVoid
             %float_t = OpTypeFloat 32
       %copysign_fn_t = OpTypeFunction %void_t
             %float_1 = OpConstant %float_t 1
          %negFloat_1 = OpConstant %float_t -1

; All functions
      %copysign_float = OpFunction %void_t None %copysign_fn_t
; CHECK: define spir_kernel void @copysign_float()
                   %2 = OpLabel
                   %3 = OpExtInst %float_t %1 copysign %float_1 %negFloat_1
; CHECK: {{%[a-zA-Z0-9]+}} = call spir_func float @_Z8copysignff(float 1.000000e+00, float -1.000000e+00)
                        OpReturn
; CHECK: ret void
                        OpFunctionEnd
; CHECK: }
