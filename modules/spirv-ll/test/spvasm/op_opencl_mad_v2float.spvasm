; RUN: %spirv-ll -a OpenCL -b 64 %p/op_opencl_mad_v2float.spv -o %t
; RUN: %filecheck < %t %s
                        OpCapability Kernel
                        OpCapability Addresses
                   %1 = OpExtInstImport "OpenCL.std"
                        OpMemoryModel Physical64 OpenCL
                        OpEntryPoint Kernel %mad_v2float "mad_v2float"
                        OpSource OpenCL_C 102000

; All types, variables and constants
              %void_t = OpTypeVoid
             %float_t = OpTypeFloat 32
           %v2float_t = OpTypeVector %float_t 2
            %mad_fn_t = OpTypeFunction %void_t
             %float_1 = OpConstant %float_t 1.2
             %float_2 = OpConstant %float_t 2.1
             %float_3 = OpConstant %float_t 3.21
           %v2float_1 = OpConstantComposite %v2float_t %float_1 %float_1
           %v2float_2 = OpConstantComposite %v2float_t %float_2 %float_2
           %v2float_3 = OpConstantComposite %v2float_t %float_3 %float_3

; All functions
         %mad_v2float = OpFunction %void_t None %mad_fn_t
; CHECK: define spir_kernel void @mad_v2float()
                   %2 = OpLabel
                   %3 = OpExtInst %v2float_t %1 mad %v2float_2 %v2float_1 %v2float_3
; CHECK: {{%[a-zA-Z0-9]+}} = call spir_func <2 x float> @_Z3madDv2_fS_S_(<2 x float> <float 0x4000CCCCC0000000, float 0x4000CCCCC0000000>, <2 x float> <float 0x3FF3333340000000, float 0x3FF3333340000000>, <2 x float> <float 0x4009AE1480000000, float 0x4009AE1480000000>)
                        OpReturn
; CHECK: ret void
                        OpFunctionEnd
; CHECK: }
