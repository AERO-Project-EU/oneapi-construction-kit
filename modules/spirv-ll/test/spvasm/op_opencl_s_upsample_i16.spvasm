; RUN: %spirv-ll -a OpenCL -b 64 %p/op_opencl_s_upsample_i16.spv -o %t
; RUN: %filecheck < %t %s
                        OpCapability Kernel
                        OpCapability Addresses
                        OpCapability Int8
                        OpCapability Int16
                   %1 = OpExtInstImport "OpenCL.std"
                        OpMemoryModel Physical64 OpenCL
                        OpEntryPoint Kernel %s_upsample_i16 "s_upsample_i16"
                        OpSource OpenCL_C 102000

; All types, variables and constants
              %void_t = OpTypeVoid
               %ui8_t = OpTypeInt 8 0
              %ui16_t = OpTypeInt 16 0
     %s_upsample_fn_t = OpTypeFunction %void_t
               %ui8_3 = OpConstant %ui8_t 3
               %ui8_4 = OpConstant %ui8_t 4

; All functions
      %s_upsample_i16 = OpFunction %void_t None %s_upsample_fn_t
; CHECK: define spir_kernel void @s_upsample_i16()
                   %2 = OpLabel
                   %3 = OpExtInst %ui16_t %1 s_upsample %ui8_3 %ui8_4
; CHECK: {{%[a-zA-Z0-9]+}} = call spir_func signext i16 @_Z8upsamplecc(i8 signext 3, i8 signext 4)
                        OpReturn
; CHECK: ret void
                        OpFunctionEnd
; CHECK: }
