; RUN: %spirv-ll -a OpenCL -c Kernel -c Float64 -b 64 %p/op_sign_bit_set_scalar.spv -o %t
; RUN: %filecheck < %t %s
               OpCapability Addresses
               OpCapability Kernel
               OpCapability Float64
          %1 = OpExtInstImport "OpenCL.std"
               OpMemoryModel Physical64 OpenCL
               OpEntryPoint Kernel %8 "signbitset"
               OpSource OpenCL_C 102000
               OpName %res "res"
       %uint = OpTypeInt 32 0
     %uint_0 = OpConstant %uint 0
     %uint_1 = OpConstant %uint 1
       %void = OpTypeVoid
     %double = OpTypeFloat 64
          %7 = OpTypeFunction %void
       %bool = OpTypeBool
%double_0x1p_1024 = OpConstant %double 0x1p+1024
          %8 = OpFunction %void None %7
         %11 = OpLabel
        %res = OpSignBitSet %bool %double_0x1p_1024
               OpReturn
               OpFunctionEnd
; CHECK: define spir_kernel void @signbitset()
; CHECK: [[RES:%[a-zA-Z0-9_]+]] = call spir_func i32 @_Z7signbitd(double 0x7FF0000000000000)
; CHECK: {{%[a-zA-Z0-9_]+}} = trunc i32 [[RES]] to i1
; CHECK: declare spir_func i32 @_Z7signbitd(double)
