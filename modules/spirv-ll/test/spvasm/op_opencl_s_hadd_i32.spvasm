; RUN: %spirv-ll -a OpenCL -b 64 %p/op_opencl_s_hadd_i32.spv -o %t
; RUN: %filecheck < %t %s
                        OpCapability Kernel
                        OpCapability Addresses
                   %1 = OpExtInstImport "OpenCL.std"
                        OpMemoryModel Physical64 OpenCL
                        OpEntryPoint Kernel %s_hadd_i32 "s_hadd_i32"
                        OpSource OpenCL_C 102000

; All types, variables and constants
              %void_t = OpTypeVoid
               %i32_t = OpTypeInt 32 1
         %s_hadd_fn_t = OpTypeFunction %void_t
               %i32_1 = OpConstant %i32_t 1
               %i32_2 = OpConstant %i32_t 2

; All functions
          %s_hadd_i32 = OpFunction %void_t None %s_hadd_fn_t
; CHECK: define spir_kernel void @s_hadd_i32()
                   %2 = OpLabel
                   %3 = OpExtInst %i32_t %1 s_hadd %i32_1 %i32_2
; CHECK: {{%[a-zA-Z0-9]+}} = call spir_func i32 @_Z4haddii(i32 1, i32 2)
                        OpReturn
; CHECK: ret void
                        OpFunctionEnd
; CHECK: }
