; RUN: %spirv-ll -a OpenCL -b 64 %p/op_opencl_copysign_v4float.spv -o %t
; RUN: %filecheck < %t %s
                        OpCapability Kernel
                        OpCapability Addresses
                   %1 = OpExtInstImport "OpenCL.std"                        
                        OpMemoryModel Physical64 OpenCL
                        OpEntryPoint Kernel %copysign_v4float "copysign_v4float"
                        OpSource OpenCL_C 102000

; All types, variables and constants
              %void_t = OpTypeVoid
             %float_t = OpTypeFloat 32
           %v4float_t = OpTypeVector %float_t 4
       %copysign_fn_t = OpTypeFunction %void_t
             %float_1 = OpConstant %float_t 1
          %negFloat_1 = OpConstant %float_t -1
           %v4float_1 = OpConstantComposite %v4float_t %float_1 %float_1 %float_1 %float_1
        %negV4float_1 = OpConstantComposite %v4float_t %negFloat_1 %negFloat_1 %negFloat_1 %negFloat_1

; All functions
    %copysign_v4float = OpFunction %void_t None %copysign_fn_t
; CHECK: define spir_kernel void @copysign_v4float()
                   %2 = OpLabel
                   %3 = OpExtInst %v4float_t %1 copysign %v4float_1 %negV4float_1
; CHECK: {{%[a-zA-Z0-9]+}} = call spir_func <4 x float> @_Z8copysignDv4_fS_(<4 x float> <float 1.000000e+00, float 1.000000e+00, float 1.000000e+00, float 1.000000e+00>, <4 x float> <float -1.000000e+00, float -1.000000e+00, float -1.000000e+00, float -1.000000e+00>)
                        OpReturn
; CHECK: ret void
                        OpFunctionEnd
; CHECK: }
