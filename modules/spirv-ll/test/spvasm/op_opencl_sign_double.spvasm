; RUN: %spirv-ll -a OpenCL -b 64 -c Float64 %p/op_opencl_sign_double.spv -o %t
; RUN: %filecheck < %t %s
                        OpCapability Kernel
                        OpCapability Addresses
                        OpCapability Float64
                   %1 = OpExtInstImport "OpenCL.std"
                        OpMemoryModel Physical64 OpenCL
                        OpEntryPoint Kernel %sign_double "sign_double"
                        OpSource OpenCL_C 102000

; All types, variables and constants
              %void_t = OpTypeVoid
            %double_t = OpTypeFloat 64
           %sign_fn_t = OpTypeFunction %void_t
            %double_3 = OpConstant %double_t 3.14

; All functions
         %sign_double = OpFunction %void_t None %sign_fn_t
; CHECK: define spir_kernel void @sign_double()
                   %2 = OpLabel
                   %3 = OpExtInst %double_t %1 sign %double_3
; CHECK: {{%[a-zA-Z0-9]+}} = call spir_func double @_Z4signd(double 3.140000e+00)
                        OpReturn
; CHECK: ret void
                        OpFunctionEnd
; CHECK: }
