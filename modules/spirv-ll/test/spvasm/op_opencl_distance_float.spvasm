; RUN: %spirv-ll -a OpenCL -b 64 %p/op_opencl_distance_float.spv -o %t
; RUN: %filecheck < %t %s
                        OpCapability Kernel
                        OpCapability Addresses
                   %1 = OpExtInstImport "OpenCL.std"
                        OpMemoryModel Physical64 OpenCL
                        OpEntryPoint Kernel %distance_float "distance_float"
                        OpSource OpenCL_C 102000

; All types, variables and constants
              %void_t = OpTypeVoid
             %float_t = OpTypeFloat 32
       %distance_fn_t = OpTypeFunction %void_t
             %float_2 = OpConstant %float_t 2.0
             %float_4 = OpConstant %float_t 4.0

; All functions
      %distance_float = OpFunction %void_t None %distance_fn_t
; CHECK: define spir_kernel void @distance_float()
                   %2 = OpLabel
                   %3 = OpExtInst %float_t %1 distance %float_2 %float_4
; CHECK: {{%[a-zA-Z0-9]+}} = call spir_func float @_Z8distanceff(float 2.000000e+00, float 4.000000e+00)
                        OpReturn
; CHECK: ret void
                        OpFunctionEnd
; CHECK: }
