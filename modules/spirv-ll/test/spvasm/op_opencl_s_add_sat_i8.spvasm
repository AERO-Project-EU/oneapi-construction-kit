; RUN: %spirv-ll -a OpenCL -b 64 %p/op_opencl_s_add_sat_i8.spv -o %t
; RUN: %filecheck < %t %s
                        OpCapability Kernel
                        OpCapability Addresses
                        OpCapability Int8
                   %1 = OpExtInstImport "OpenCL.std"
                        OpMemoryModel Physical64 OpenCL
                        OpEntryPoint Kernel %s_add_sat_i8 "s_add_sat_i8"
                        OpSource OpenCL_C 102000

; All types, variables and constants
              %void_t = OpTypeVoid
                %ui8_t = OpTypeInt 8 0
      %s_add_sat_fn_t = OpTypeFunction %void_t
                %ui8_1 = OpConstant %ui8_t 1
                %ui8_2 = OpConstant %ui8_t 2

; All functions
        %s_add_sat_i8 = OpFunction %void_t None %s_add_sat_fn_t
; CHECK: define spir_kernel void @s_add_sat_i8()
                   %2 = OpLabel
                   %3 = OpExtInst %ui8_t %1 s_add_sat %ui8_1 %ui8_2
; CHECK: {{%[a-zA-Z0-9]+}} = call spir_func signext i8 @_Z7add_satcc(i8 signext 1, i8 signext 2)
                        OpReturn
; CHECK: ret void
                        OpFunctionEnd
; CHECK: }
