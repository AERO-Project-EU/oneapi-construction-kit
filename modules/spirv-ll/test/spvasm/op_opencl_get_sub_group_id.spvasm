; RUN: %spirv-ll -a OpenCL -b 64 %p/op_opencl_get_sub_group_id.spv -o %t
; RUN: %filecheck < %t %s
                                 OpCapability Addresses
                                 OpCapability Kernel
                                 OpCapability Int64
                            %1 = OpExtInstImport "OpenCL.std"
                                 OpMemoryModel Physical64 OpenCL
                                 OpEntryPoint Kernel %get_sub_group_id_fn "get_sub_group_id_fn" %__spirv_BuiltInSubgroupID
                                 OpDecorate %__spirv_BuiltInSubgroupID BuiltIn SubgroupId
                       %size_t = OpTypeInt 64 0
                   %size_ptr_t = OpTypePointer Input %size_t
                       %void_t = OpTypeVoid
        %get_sub_group_id_fn_t = OpTypeFunction %void_t

    %__spirv_BuiltInSubgroupID = OpVariable %size_ptr_t Input
          %get_sub_group_id_fn = OpFunction %void_t None %get_sub_group_id_fn_t
                            %2 = OpLabel
;CHECK: {{%[a-zA-Z0-9]+}} = call spir_func i32 @_Z16get_sub_group_idv()
                          %res = OpLoad %size_t %__spirv_BuiltInSubgroupID
                                 OpReturn
                                 OpFunctionEnd
