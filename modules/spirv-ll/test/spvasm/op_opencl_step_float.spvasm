; RUN: %spirv-ll -a OpenCL -b 64 %p/op_opencl_step_float.spv -o %t
; RUN: %filecheck < %t %s
                        OpCapability Kernel
                        OpCapability Addresses
                   %1 = OpExtInstImport "OpenCL.std"
                        OpMemoryModel Physical64 OpenCL
                        OpEntryPoint Kernel %step_float "step_float"
                        OpSource OpenCL_C 102000

; All types, variables and constants
              %void_t = OpTypeVoid
             %float_t = OpTypeFloat 32
           %step_fn_t = OpTypeFunction %void_t
             %float_1 = OpConstant %float_t 1.9
             %float_2 = OpConstant %float_t 2.0

; All functions
          %step_float = OpFunction %void_t None %step_fn_t
; CHECK: define spir_kernel void @step_float()
                   %2 = OpLabel
                   %3 = OpExtInst %float_t %1 step %float_1 %float_2
; CHECK: {{%[a-zA-Z0-9]+}} = call spir_func float @_Z4stepff(float 0x3FFE666660000000, float 2.000000e+00)
                        OpReturn
; CHECK: ret void
                        OpFunctionEnd
; CHECK: }
