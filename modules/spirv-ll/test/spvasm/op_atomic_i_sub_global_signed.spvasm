; CHECK-GE15: [[PTR:%[a-zA-Z0-9_]+]] = getelementptr [[BLOCK:%.*]], ptr addrspace(1) [[BLOCK]], i32 0, i32 0
; CHECK-LT15: [[PTR:%[a-zA-Z0-9_]+]] = getelementptr [[BLOCK]], [[BLOCK]] addrspace(1)* [[BLOCK]], i32 0, i32 0
; CHECK-GE15: {{%[a-zA-Z0-9_]+}} = call spir_func i32 @_Z10atomic_subPU3AS1Vii(ptr addrspace(1) [[PTR]], i32 424)
; CHECK-LT15: {{%[a-zA-Z0-9_]+}} = call spir_func i32 @_Z10atomic_subPU3AS1Vii(i32 addrspace(1)* [[PTR]], i32 424)
; CHECK: ret void
; CHECK-GE15: declare spir_func i32 @_Z10atomic_subPU3AS1Vii(ptr addrspace(1), i32)
