; RUN: %pp-llvm-ver -o %t.pp < %s --llvm-ver %LLVMVER
; RUN: %spirv-ll -a OpenCL -b 64 %p/op_opencl_frexp_local_v16float.spv -o %t
; RUN: %filecheck < %t %t.pp
                        OpCapability Kernel
                        OpCapability Addresses
                        OpCapability Vector16
                   %1 = OpExtInstImport "OpenCL.std"
                        OpMemoryModel Physical64 OpenCL
                        OpEntryPoint Kernel %frexp_v16float "frexp_v16float"
                        OpSource OpenCL_C 102000
                        OpName %in_ptr "in_ptr"

; All types, variables and constants
              %void_t = OpTypeVoid
               %int_t = OpTypeInt 32 1
             %float_t = OpTypeFloat 32
            %v16int_t = OpTypeVector %int_t 16
          %v16float_t = OpTypeVector %float_t 16
        %v16int_ptr_t = OpTypePointer Workgroup %v16int_t
          %frexp_fn_t = OpTypeFunction %void_t %v16int_ptr_t
             %float_1 = OpConstant %float_t 1.4
          %v16float_1 = OpConstantComposite %v16float_t %float_1 %float_1 %float_1 %float_1 %float_1 %float_1 %float_1 %float_1 %float_1 %float_1 %float_1 %float_1 %float_1 %float_1 %float_1 %float_1

; All functions
      %frexp_v16float = OpFunction %void_t None %frexp_fn_t
              %in_ptr = OpFunctionParameter %v16int_ptr_t
; CHECK-GE15: define spir_kernel void @frexp_v16float(ptr addrspace(3) %in_ptr)
; CHECK-LT15: define spir_kernel void @frexp_v16float(<16 x i32> addrspace(3)* %in_ptr)
                   %2 = OpLabel
                   %3 = OpExtInst %v16float_t %1 frexp %v16float_1 %in_ptr
; CHECK-GE15: {{%[a-zA-Z0-9]+}} = call spir_func <16 x float> @_Z5frexpDv16_fPU3AS3Dv16_i(<16 x float> <float 0x3FF6666660000000, float 0x3FF6666660000000, float 0x3FF6666660000000, float 0x3FF6666660000000, float 0x3FF6666660000000, float 0x3FF6666660000000, float 0x3FF6666660000000, float 0x3FF6666660000000, float 0x3FF6666660000000, float 0x3FF6666660000000, float 0x3FF6666660000000, float 0x3FF6666660000000, float 0x3FF6666660000000, float 0x3FF6666660000000, float 0x3FF6666660000000, float 0x3FF6666660000000>, ptr addrspace(3) %in_ptr)
; CHECK-LT15: {{%[a-zA-Z0-9]+}} = call spir_func <16 x float> @_Z5frexpDv16_fPU3AS3Dv16_i(<16 x float> <float 0x3FF6666660000000, float 0x3FF6666660000000, float 0x3FF6666660000000, float 0x3FF6666660000000, float 0x3FF6666660000000, float 0x3FF6666660000000, float 0x3FF6666660000000, float 0x3FF6666660000000, float 0x3FF6666660000000, float 0x3FF6666660000000, float 0x3FF6666660000000, float 0x3FF6666660000000, float 0x3FF6666660000000, float 0x3FF6666660000000, float 0x3FF6666660000000, float 0x3FF6666660000000>, <16 x i32> addrspace(3)* %in_ptr)
                        OpReturn
; CHECK: ret void
                        OpFunctionEnd
; CHECK: }
