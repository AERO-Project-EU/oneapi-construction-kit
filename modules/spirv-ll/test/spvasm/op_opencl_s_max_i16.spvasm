; RUN: %spirv-ll -a OpenCL -b 64 %p/op_opencl_s_max_i16.spv -o %t
; RUN: %filecheck < %t %s
                        OpCapability Kernel
                        OpCapability Addresses
                        OpCapability Int16
                   %1 = OpExtInstImport "OpenCL.std"
                        OpMemoryModel Physical64 OpenCL
                        OpEntryPoint Kernel %s_max_i16 "s_max_i16"
                        OpSource OpenCL_C 102000

; All types, variables and constants
              %void_t = OpTypeVoid
               %i16_t = OpTypeInt 16 1
          %s_max_fn_t = OpTypeFunction %void_t
               %i16_1 = OpConstant %i16_t 1
               %i16_2 = OpConstant %i16_t 2

; All functions
           %s_max_i16 = OpFunction %void_t None %s_max_fn_t
; CHECK: define spir_kernel void @s_max_i16()
                   %2 = OpLabel
                   %3 = OpExtInst %i16_t %1 s_max %i16_1 %i16_2
; CHECK: {{%[a-zA-Z0-9]+}} = call spir_func signext i16 @_Z3maxss(i16 signext 1, i16 signext 2)
                        OpReturn
; CHECK: ret void
                        OpFunctionEnd
; CHECK: }
